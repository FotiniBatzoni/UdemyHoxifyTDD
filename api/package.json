{
  "name": "express-ws",
  "version": "1.1.0",
  "description": "tdd with express",
  "main": "app.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development npm run migrate && cross-env NODE_ENV=development nodemon index",
    "start": "cross-env NODE_ENV=production npm run migrate && cross-env NODE_ENV=production node index",
    "test": "cross-env NODE_ENV=test jest --watch --runInBand --detectOpenHandles  && cross-env NODE_ENV=test npm run clean-up",
    "test:staging": "cross-env NODE_ENV=staging npm run migrate && cross-env NODE_ENV=staging jest -f . --runInBand --forceExit && cross-env NODE_ENV=staging npm run clean-up",
    "clean-up": "node test-cleanup",
    "lint": "eslint .",
    "migrate": "sequelize-cli db:migrate"
  },
  "author": "Fotini Batzoni",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.7",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "file-type": "^18.0.0",
    "i18next": "^21.8.10",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-middleware": "^3.2.1",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "2.0",
    "nodemailer": "^6.7.5",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.20.1",
    "sequelize-cli": "^6.4.1",
    "sqlite3": "^5.0.8",
    "winston": "^3.8.2",
    "winston-transport-sequelize": "^4.0.10"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "jest-watch-typeahead": "^1.1.0",
    "nodemailer-stub": "^1.2.2",
    "prettier": "^2.6.2",
    "smtp-server": "^3.11.0",
    "supertest": "^6.2.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config"
    ],
    "verbose": true
  }
}
